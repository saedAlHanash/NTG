<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="global_btn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient_light_green</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="elevation">@dimen/_3sdp</item>
    </style>

    <style name="card_style" parent="CardView">
        <item name="cardBackgroundColor">@color/off_white</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="contentPadding">@dimen/_10sdp</item>
        <item name="android:layout_margin">@dimen/_15sdp</item>
    </style>

    <style name="title_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_color_dark</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="input_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/main_color_dark</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:paddingStart">@dimen/_3sdp</item>
        <item name="android:paddingEnd">@dimen/_3sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
    </style>

</resources>